{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Jest Tests",
      "program": "${workspaceRoot}/node_modules/jest/bin/jest.js",
      "cwd": "${workspaceRoot}",
      "protocol": "inspector",
      "args": [
          "--runInBand",
          "--no-cache"
      ],
      "internalConsoleOptions": "openOnSessionStart",
    }
  ]
}