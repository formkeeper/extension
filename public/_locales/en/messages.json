    "placeholders" : {
      "mm": {
        "content": "$1",
        "example": "30"
      }
    }
  },
  "one_min_ago": {
    "message": "a minute ago"
  },
  "secs_ago": {
    "message": "$ss$ seconds ago",
    "description": "Seconds ago since a given date. Expects seconds parameter to be passed in.",
    "placeholders" : {
      "ss": {
        "content": "$1",
        "example": "52"
      }
    }
  },
  "one_sec_ago": {
    "message": "a second ago"
  },
  "just_now": {
    "message": "just now"
  },
  "day_and_month": {
    "message": "$dd$/$MM$",
    "description": "Day and month format since it may change among countries",
    "placeholders" : {
      "dd": {
        "content": "$1",
        "example": "1"
      },
      "MM": {
        "content": "$2",
        "example": "12"
      }
    }
  }
